
process {

  //container = params.container

  cpus = { check_max( 2, 'cpus' ) }
  memory = { check_max( 4.GB * task.attempt, 'memory' ) }
  time = { check_max( 2.h * task.attempt, 'time' ) }

  //errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  errorStrategy = 'retry' 
  maxRetries = 1
  maxErrors = '-1'
  
  withName:output_documentation {
    memory = { check_max( 100.MB, 'memory' ) }
  }
  withName:workflow_summary_mqc {
    cpus = { check_max (1, 'cpus') }
    memory = { check_max( 10.MB, 'memory' ) }
    executor = 'local'
  }

    withLabel: smallCpu { cpus = 1 }
    withLabel: medCpu { cpus = 4 }
    withLabel: bigCpu { cpus = 8 }
    withLabel: smallMem { memory = '2 GB' }
    withLabel: medMem { memory = '15 GB' }
    withLabel: bigMem { memory = '40 GB' }

}

