Bootstrap: docker
From: conda/miniconda2-centos7

%environment
  LANG=en_US.UTF
  LC_ALL=en_US.UTF-8
  export LANG LC_ALL
  PATH=/usr/local/envs/rnaseq-2.0/bin:$PATH
  export PATH

%labels
    DESCRIPTION Singularity image containing all requirements for rnaseq pipeline
    VERSION 2.0

%files
    environment.yml /

%post
    conda env create -f /environment.yml
    conda clean -a
